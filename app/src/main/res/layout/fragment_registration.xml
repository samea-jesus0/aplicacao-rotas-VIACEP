<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ui.registration.RegistrationFragment">

    <EditText
        android:id="@+id/nomeEditText"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blueeee"
        android:textColorHint="@color/blueeee"
        android:hint="Nome" />

    <EditText
        android:id="@+id/cpfEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blueeee"
        android:textColorHint="@color/blueeee"
        android:hint="CPF" />

    <EditText
        android:id="@+id/telefoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blueeee"
        android:textColorHint="@color/blueeee"
        android:hint="Telefone" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blueeee"
        android:textColorHint="@color/blueeee"
        android:hint="Email" />

    <EditText
        android:id="@+id/senhaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blueeee"
        android:textColorHint="@color/blueeee"
        android:hint="Senha"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/placaVanEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blueeee"
        android:textColorHint="@color/blueeee"
        android:hint="Placa da Van" />

    <Button
        android:id="@+id/registrarButton"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/blueeee"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Registrar" />

</LinearLayout>